<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fatangare.logcatviewer.example" >

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.fatangare.logcatviewer.service.LogcatViewerService"
            android:label="LogcatLoggerService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.fatangare.logcatviewer.service.LogcatViewerService" />
            </intent-filter>
        </service>
        <service
            android:name="com.fatangare.logcatviewer.service.LogcatViewerFloatingView"
            android:label="LogcatLoggerFloatingView"
            android:exported="true">
            <intent-filter>
                <action android:name="com.fatangare.logcatviewer.service.LogcatViewerFloatingView" />
            </intent-filter>
        </service>
    </application>

</manifest>
